<%- include ../../partial/header.ejs %>
<%- include ../../partial/navbar.ejs %>
<%- include ../../partial/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Jenis pembayaran</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item "><a href="/payment">Jenis pembayaran</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form ubah jenis pembayaran</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <div class="form-group">
                      <label for="type">Tipe</label>
                      <input type="text" name='type' value="<%= payment.type %>" class="form-control" id="type" placeholder="Masukan tipe pembayaran" required>
                    </div>
                    <div class="form-group">
                        <label>Nama Bank</label>
                        <div class="select2-purple">
                          <select 
                            class="form-control select2" 
                            multiple="multiple" 
                            data-placeholder="Pilih banks"
                            style="width: 100%;"
                            name="banks" 
                            required>
                            <% banks.forEach(banks=>{ %>
                              <option value="<%= banks._id %>"
                                <% payment.banks.forEach(paymentBank=>{ %>
                                    <% if(banks._id.toString()===paymentBank._id.toString()){ %>
                                      selected
                                      <% } %>
                                        <% }) %>
                                ><%= banks.name %> <%= banks.nameBank %> <%= banks.noRekening %></option>
                            <% }) %>
                            
                          </select>
      
                        </div>
                      </div>
                    </div>
                    
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <%- include ../../partial/footer.ejs %>
  <%- include ../../partial/js.ejs %>
